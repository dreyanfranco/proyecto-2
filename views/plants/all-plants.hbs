<div class="container plants-index">
  <a href="/plantas" class="btn btn-sm btn-dark">Todas las plantas</a>
  <a href="/plantas/casi-inmortal" class="btn btn-sm btn-dark">Casi inmortal</a>
  <a href="/plantas/amigable" class="btn btn-sm btn-dark">Pet friendly</a>
  <a href="/plantas/facil" class="btn btn-sm btn-dark">Fácil de cuidar</a>
  <a href="/plantas/facil" class="btn btn-sm btn-dark">Poca luz</a>

  {{#if isAdmin}}
  <a href="/plantas/crear-planta" class="btn btn-sm btn-dark">Añadir plantas</a>
  {{/if}}
  <div class="row">
    {{#each plants}}
    <div class="col-md-4">
      <figure>
        <img src="{{imageUrl}}" alt="{{name}}">
      </figure>
      <h4>{{name}}</h4>
      <p><strong>Cuidado: </strong> {{care}}</p>
      <a href="/plantas/detalle/{{id}}" class="btn btn-sm btn-dark">Ver detalles</a>
      {{#if ../isAdmin}}
      <a href="/plantas/editar-planta?id={{id}}" class="btn btn-sm btn-dark">Editar planta</a>
      {{/if}}
      <a href="/perfil/agregar-planta/{{id}}" class="btn btn-sm btn-dark">Añadir a mi Jungle</a>

      <hr>
    </div>
    {{/each}}
  </div>
</div>