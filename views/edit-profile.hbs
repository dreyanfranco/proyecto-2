<section>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">

                <h1>Editar {{name}}</h1>

                <form action="/editar-perfil?id={{id}}" method="POST">
                    <div class='form-group'>
                        <label for='name'>Nombre</label>
                        <input name='name' type='text' class='form-control' placeholder='Nombre' id='name'
                            value="{{name}}">
                    </div>
                    <div class='form-group'>
                        <label for='username'>Usuario</label>
                        <input name='username' type='text' class='form-control' placeholder='Usuario' id='username'
                            value="{{username}}">
                    </div>
                    <div class='form-group'>
                        <label for='password'>Contraseña</label>
                        <input name='password' type='password' class='form-control' placeholder='Ingresar contraseña'
                            id='password' value="{{password}}">
                    </div>
                    <button type='submit' class='btn btn-dark btn-block'>Enviar</button>
                    {{#if errorMsg}}
                    <p style="margin-top: 10px;background: red; color: white; text-align: center; padding: 10px">
                        {{errorMsg}}</p>
                    {{/if}}
                </form>

            </div>
        </div>
    </div>
</section>